generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?

  folders Folder[]

  @@map("user")
}

model Folder {
    id      Int @id @default(autoincrement())
    title   String

    notes Note[]

    user  User @relations(fields: [userId], references: [id])
    userId Int @map("user_id")

    @@map ("folder")
}

model Note {
    id          Int @id @default(autoincrement())
    title       String
    description String?
    type        String
    bookmark    Boolean @default(false)

    folder      Folder @relations(fields: [folderId], references[id])
    folderId    Int @map("folder_id")

    @@map("note")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
